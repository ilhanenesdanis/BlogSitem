@model BlogSitem.Models.Sınıf.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
<form method="post" class="form-group">
    @Html.LabelFor(x => x.Baslık)
    @Html.TextBoxFor(x => x.Baslık, new { @class = "form-control" })
    <br />
    <label>Blog Resim</label>
    @Html.TextBoxFor(x => x.BlogImg, new { @class = "form-control" })
    <br />
    <label>Blog Özeti</label>
    @Html.TextAreaFor(x => x.BlogOzet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogYazı)
    @Html.TextAreaFor(x => x.BlogYazı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Ekle</button>
</form>

